generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:prismacontainer@localhost:5432/reviewsdb"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  reviews   Review[]
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  content   String
  score     Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  movie     Movie?   @relation(fields: [movieId], references: [id])
  movieId   Int?
}
